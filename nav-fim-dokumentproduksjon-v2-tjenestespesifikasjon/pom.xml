<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<parent>
		<groupId>no.nav.tjenestespesifikasjoner</groupId>
		<artifactId>tjenestespesifikasjoner</artifactId>
		<version>0-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>nav-fim-dokumentproduksjon-v2-tjenestespesifikasjon</artifactId>
	<version>0-SNAPSHOT</version>

	<properties>
		<wsdl.directory>src/main/resources/wsdl/no/nav/tjeneste/virksomhet/dokumentproduksjon/v2</wsdl.directory>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.cxf</groupId>
				<artifactId>cxf-codegen-plugin</artifactId>
				<executions>
					<execution>
						<id>wsdl-to-java</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>wsdl2java</goal>
						</goals>
						<configuration>
							<defaultOptions>
								<extraargs>
									<extraarg>-xjc-Xfluent-api</extraarg>
									<extraarg>-xjc-XhashCode</extraarg>
									<extraarg>-xjc-Xequals</extraarg>
									<extraarg>-xjc-XtoString</extraarg>
								</extraargs>
							</defaultOptions>
							<wsdlOptions>
								<wsdlOption>
									<wsdl>${wsdl.directory}/Binding.wsdl</wsdl>
									<wsdlLocation>classpath:wsdl/no/nav/tjeneste/virksomhet/dokumentproduksjon/v2/Binding.wsdl</wsdlLocation>
									<serviceName>Dokumentproduksjon_v2</serviceName>
									<bindingFiles>
										<bindingFile>${basedir}/src/main/resources/Binding.xjb</bindingFile>
										<bindingFile>${basedir}/src/main/resources/dokumentproduksjon.xjb</bindingFile>
										<bindingFile>${basedir}/src/main/resources/meldinger.xjb</bindingFile>
									</bindingFiles>
								</wsdlOption>
							</wsdlOptions>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<executions>
					<execution>
						<id>default-jar</id>
						<phase>package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
						<configuration>
							<classesDirectory>${project.build.directory}/classes</classesDirectory>
							<classifier>jaxws</classifier>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>generate-zip</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<appendAssemblyId>false</appendAssemblyId>
							<descriptor>${basedir}/src/main/assembly/zip-assembly.xml</descriptor>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>

		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-assembly-plugin</artifactId>
					<version>2.5.5</version>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.jvnet.jaxb2_commons</groupId>
			<artifactId>jaxb2-basics-runtime</artifactId>
		</dependency>
	</dependencies>
	<scm>
		<developerConnection>scm:git:git@github.com:navikt/tjenestespesifikasjoner.git</developerConnection>
		<connection>scm:git:git@github.com:navikt/tjenestespesifikasjoner.git</connection>
		<url>https://github.com/navikt/tjenestespesifikasjoner</url>
		<tag>HEAD</tag>
	</scm>
	<name>${project.artifactId}</name>

</project>
