<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<parent>
		<groupId>no.nav.tjenestespesifikasjoner</groupId>
		<artifactId>tjenestespesifikasjoner</artifactId>
		<version>0-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>nav-fim-behandlejournal-v3-tjenestespesifikasjon</artifactId>
	<version>0-SNAPSHOT</version>
	<name>${project.artifactId}</name>
	<properties>
		<wsdl.directory>src/main/resources/wsdl</wsdl.directory>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.cxf</groupId>
				<artifactId>cxf-codegen-plugin</artifactId>
				<version>${cxf.version}</version>
				<executions>
					<execution>
						<id>wsdl-to-java</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>wsdl2java</goal>
						</goals>
						<configuration>
							<defaultOptions>
								<extraargs>
									<extraarg>-xjc-Xfluent-api</extraarg>
									<extraarg>-xjc-XhashCode</extraarg>
									<extraarg>-xjc-Xequals</extraarg>
									<extraarg>-xjc-XtoString</extraarg>
								</extraargs>
							</defaultOptions>
							<wsdlOptions>
								<wsdlOption>
									<wsdl>${wsdl.directory}/no/nav/tjeneste/virksomhet/behandleJournal/v3/Binding.wsdl</wsdl>
									<wsdlLocation>classpath:wsdl/no/nav/tjeneste/virksomhet/behandleJournal/v3/Binding.wsdl
									</wsdlLocation>
									<serviceName>BehandleJournal_v3</serviceName>
									<bindingFiles>
										<bindingFile>${basedir}/src/main/resources/Binding.xjb</bindingFile>
										<bindingFile>${basedir}/src/main/resources/behandleJournal.xjb</bindingFile>
									</bindingFiles>
								</wsdlOption>
							</wsdlOptions>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
			<resource>
				<directory>src/main/resources/wsdl</directory>
				<targetPath>wsdl</targetPath>
			</resource>
		</resources>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.jvnet.jaxb2_commons</groupId>
			<artifactId>jaxb2-basics-runtime</artifactId>
		</dependency>
	</dependencies>
	<scm>
		<developerConnection>scm:git:git@github.com:navikt/tjenestespesifikasjoner.git</developerConnection>
		<connection>scm:git:git@github.com:navikt/tjenestespesifikasjoner.git</connection>
		<url>https://github.com/navikt/tjenestespesifikasjoner</url>
		<tag>HEAD</tag>
	</scm>
</project>
